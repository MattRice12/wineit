<div class="row show-row">
  <div class="col s12 block-show">
    <div class="name-block-show">
      <div>
        <h3 class="name-show">
          <%= "#{user.username} "%>
        </h3>
        <div>
          <ol>Favorite Wines:
            <% user.userwines.each do |userwine| %>
            <li class="wine-favorite-list">
              <%= userwine.wine.name %>
            </li>
            <% end %>
          </ol>
        </div>
      </div>
      <small class="edit-delete-block">
        <small><%= link_to "Edit", user, class: "waves-effect waves-light edit-btn", method: :put  %></small>
        <small><%= link_to "Delete", user, class: "waves-effect waves-light del-btn", method: :delete  %></small>
      </small>
    </div>
  </div>
  <div>
    <%= link_to "back", users_path, class: "back btn"%>
  </div>
</div>
